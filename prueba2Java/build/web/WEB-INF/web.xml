<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>ControladorLogin</servlet-name>
        <servlet-class>app.ControladorLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControladorMenu</servlet-name>
        <servlet-class>app.ControladorMenu</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControladorCrudClientes</servlet-name>
        <servlet-class>app.ControladorCrudClientes</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControladorEstadoVehi</servlet-name>
        <servlet-class>app.ControladorEstadoVehi</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControladorRegistro</servlet-name>
        <servlet-class>app.ControladorRegistro</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControladorMenuVehiculo</servlet-name>
        <servlet-class>app.ControladorMenuVehiculo</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ControladorLogin</servlet-name>
        <url-pattern>/ControladorLogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControladorMenu</servlet-name>
        <url-pattern>/ControladorMenu</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControladorCrudClientes</servlet-name>
        <url-pattern>/ControladorCrudClientes</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControladorEstadoVehi</servlet-name>
        <url-pattern>/ControladorEstadoVehi</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControladorRegistro</servlet-name>
        <url-pattern>/ControladorRegistro</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControladorMenuVehiculo</servlet-name>
        <url-pattern>/ControladorMenuVehiculo</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
